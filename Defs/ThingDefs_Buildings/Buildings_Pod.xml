<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <ThingDef ParentName="BuildingBase">
    <defName>ECP_PodLarge</defName>
    <label>Large Transport Pod</label>
    <description>A heavy duty launchable sub-orbital cargo pod. Can be used for sending gifts, people, and supplies to remote locations.</description>
    <graphicData>
      <texPath>PodTemplateBlue</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.75,1.75)</drawSize>
    </graphicData>
    <size>(1,1)</size>
    <rotatable>false</rotatable>
    <tickerType>Normal</tickerType>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>false</castEdgeShadows>
    <fillPercent>0.5</fillPercent>
    <designationCategory>Misc</designationCategory>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <statBases>
      <MaxHitPoints>350</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Flammability>0.5</Flammability>
    </statBases>
    <costList>
      <Steel>120</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="CompProperties_Transporter">
        <restEffectiveness>0.8</restEffectiveness>
        <massCapacity>500</massCapacity>
      </li>
      <li Class="CompProperties_Launchable" />
    </comps>
    <inspectorTabs>
      <li>ITab_TransporterContents</li>
    </inspectorTabs>
    <placeWorkers>
      <li>PlaceWorker_NeedsFuelingPort</li>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>ECP_Rsh_PodImp</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <uiIconScale>0.75</uiIconScale>
  </ThingDef>
  
  <ThingDef ParentName="BuildingBase">
    <defName>ECP_PodHuge</defName>
    <label>Huge Transport Pod</label>
    <description>A heavy duty launchable sub-orbital cargo pod. Can be used for sending gifts, people, and supplies to the other side of the planet.</description>
    <graphicData>
      <texPath>PodTemplateRed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.5,1.5)</drawSize>
    </graphicData>
    <size>(1,1)</size>
    <rotatable>false</rotatable>
    <tickerType>Normal</tickerType>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>false</castEdgeShadows>
    <fillPercent>0.5</fillPercent>
    <designationCategory>Misc</designationCategory>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <WorkToBuild>2500</WorkToBuild>
      <Flammability>0.7</Flammability>
    </statBases>
    <costList>
      <Steel>300</Steel>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <comps>
      <li Class="CompProperties_Transporter">
        <restEffectiveness>0.8</restEffectiveness>
        <massCapacity>1050</massCapacity>
      </li>
      <li Class="CompProperties_Launchable" />
    </comps>
    <inspectorTabs>
      <li>ITab_TransporterContents</li>
    </inspectorTabs>
    <placeWorkers>
      <li>PlaceWorker_NeedsFuelingPort</li>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>ECP_Rsh_PodAdv</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <uiIconScale>0.9</uiIconScale>
  </ThingDef>
</Defs>