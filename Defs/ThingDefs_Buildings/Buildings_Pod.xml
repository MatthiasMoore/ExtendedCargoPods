<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef Name="ExtendedCargoPod" ParentName="BuildingBase" Abstract="True">
    <description>A heavy duty launchable sub-orbital cargo pod. Can be used for sending gifts, people, and supplies.</description>
    <size>(1,1)</size>
    <rotatable>false</rotatable>
    <tickerType>Normal</tickerType>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>false</castEdgeShadows>
    <fillPercent>0.7</fillPercent>
    <designationCategory>Misc</designationCategory>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <inspectorTabs>
      <li>ITab_TransporterContents</li>
    </inspectorTabs>
    <placeWorkers>
      <li>PlaceWorker_NeedsFuelingPort</li>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
  </ThingDef>
  
  <ThingDef Name="TransportPodLg" ParentName="ExtendedCargoPod">
    <defName>LargeTransportPod</defName>
    <label>Large Transport Pod</label>
    <graphicData>
      <texPath>PodTemplateBlue</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.4,1.4)</drawSize>
    </graphicData>
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
      <WorkToBuild>1000</WorkToBuild>
      <Flammability>0.1</Flammability>
    </statBases>
    <costList>
      <Steel>120</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="CompProperties_Transporter">
        <restEffectiveness>0.8</restEffectiveness>
        <massCapacity>500</massCapacity>
      </li>
      <li Class="CompProperties_Launchable" />
    </comps>
    <researchPrerequisites>
      <li>TransportPodImp</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <uiIconScale>0.9</uiIconScale>
  </ThingDef>
  
  <ThingDef Name="TransportPodHg" ParentName="ExtendedCargoPod">
    <defName>HugeTransportPod</defName>
    <label>Huge Transport Pod</label>
    <graphicData>
      <texPath>PodTemplateRed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.4,1.4)</drawSize>
    </graphicData>
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
      <WorkToBuild>1000</WorkToBuild>
      <Flammability>0.1</Flammability>
    </statBases>
    <costList>
      <Steel>300</Steel>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <comps>
      <li Class="CompProperties_Transporter">
        <restEffectiveness>0.8</restEffectiveness>
        <massCapacity>1050</massCapacity>
      </li>
      <li Class="CompProperties_Launchable" />
    </comps>
    <researchPrerequisites>
      <li>TransportPodAdv</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <uiIconScale>0.9</uiIconScale>
  </ThingDef>
</Defs>